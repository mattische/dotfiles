# Example: ~/work/.gitconfig.work
#
# Overrides [user] for all repos under ~/work/
# Referenced from ~/.gitconfig via:
# To be clear, the below directive should be put in ~/work/.gitignore.work
#
#   [includeIf "gitdir:~/work/"]
#       path = ~/work/.gitconfig.work
#
# Copy this file to ~/work/.gitconfig.work and adapt the values.

[user]
	name = Your Name
	email = you@company.com
